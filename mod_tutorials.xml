<?xml version="1.0" encoding="utf-8"?>
<extension
type="module"
version="3.0"
method="upgrade"
client="administrator">	
<name>Video Tutorials</name>
<author>Remco Janssen</author>
  <creationDate>Januari 2015</creationDate>
  <copyright>(C) 2015 Cross Media Creations. All rights reserved.
  </copyright>
  <license>GNU General Public License version 2 or later; see
    LICENSE.txt</license>
  <authorEmail>remco@remcojanssen.nl</authorEmail>
  <authorUrl>www.crossmediacreations.nl</authorUrl>
<version>1.1.0</version>
<description>Displays the tutorial videos placed by com_tutorial.</description>
<files>
<filename module="mod_tutorials">mod_tutorials.php</filename>
<filename>helper.php</filename>
<filename>index.html</filename>
<folder>tmpl</folder>
</files>
<help url="HELP_EXTENSIONS_MODULE_TUTORIALS_URL"/>
<languages>
<language tag="en-GB">language/en-GB/en-GB.mod_tutorials.ini</language>
<language tag="nl-NL">language/nl-NL/nl-NL.mod_tutorials.ini</language>
</languages>
<media destination="mod_tutorials" folder="media">
<filename>index.html</filename>
<folder>css</folder>
</media>
<config>
<fields name="params">
<fieldset name="basic">
<field
name="count"
type="text"
default="5"
label="MOD_TUTORIALS_FIELD_COUNT_LABEL"
description="MOD_TUTORIALS_FIELD_COUNT_DESC" />
</fieldset>

<fieldset name="advanced">
  <field
name="layout"
type="modulelayout"
label="JFIELD_ALT_LAYOUT_LABEL"
description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
<field
name="moduleclass_sfx"
type="text"
label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
</fieldset>

</fields>
</config>
</extension>